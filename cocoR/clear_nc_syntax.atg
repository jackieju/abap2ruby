CHARACTERS
  letter   = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz" .
  digit    = "0123456789" .
  hexdigit = digit + "ABCDEFabcdef" .
  tab      = CHR(9) .
  eol      = CHR(10) .
  files    = letter + digit + ":\." .
  chars    = CHR(32) .. CHR(255) - "'" .
  strings  = CHR(32) .. CHR(255) - '"' .
  strings1 = CHR(32) .. CHR(255) - '"' - "#{" .	
  macros   = ANY - eol .

COMMENTS FROM ""
COMMENTS FROM "//" TO eol

IGNORE
  tab + eol + CHR(13)

TOKENS
  identifier = ( "_" | letter) { "_" | letter | digit } .
  number     = digit { digit } [ "." { digit }] [ "U" | "u" | "L" | "l" ] .
  hexnumber  = "0" ( "x" | "X" ) hexdigit { hexdigit } [ "U" | "u" | "L" | "l" ] .
  string1     = '"' { strings } '"' .
 
  char1       = "'" [ "\\" ] chars "'" .
  library    = "<" files { files } ">" .
  
  

PRAGMAS

  PreProcessor = "#" ( letter ) .
		    





PRODUCTIONS


    C                    =      
   [ Package ] { Import | LoadLib } [ Inheritance ] 

    { Definition } EOF .

  Import = "use" ClassFullName<szName>
  ";" .
  
  LoadLib = "load" identifier 
  
   ";" .
  

	
	
 
  Definition           = 
 ClassDef | Statements .
	
               
  
  
  Package = "package" identifier 

		{"/"identifier
	  }";" .
 
  Inheritance              = ("inherit"|"<") identifier 
   ";" .
  

	ClassDef			= "class" identifier  
 
{Inheritance}
ClassBody	";" .
	ClassBody			 = 
	

	"{" { Definition} "}" 
	
	
	.


  StorageClass         = 
   "static" 
