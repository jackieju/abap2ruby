                           | ReturnStatement | SwitchStatement
                           | WhileStatement ) 
 .

  Label                = ("case" ConstExpression ":")  | ( "default" ":") .



  AssignmentStatement =  Expression ";" .

  BreakStatement       = "break"  
  
	";"
 .
 LocalDeclaration     = 
							
 ( Type<type> |  StorageClass  [Type<type>] )
  
							
  { "*"						
  } 
  
  identifier				
 (FunctionDefinition | VarList<type, szName>";" ) 
 . 

